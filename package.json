{
  "name": "koncert",
  "description": "A progressive web app displaying Danish concerts.",
  "version": "1.0.0",
  "author": "Christoffer Kjeldgaard Petersen",
  "private": true,
  "engines": {
    "node": ">=6",
    "npm": ">=3"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production npm run clean && npm run test && npm run compile",
    "build:parts": "npm run sass && npm run compile",
    "clean": "rimraf dist && rimraf coverage",
    "compile": "webpack --config config/webpack.config.prod.js",
    "coverage": "npm run coverage:run && npm run coverage:remap && npm run coverage:open",
    "coverage:open": "opn coverage/html-ts/index.html",
    "coverage:remap": "remap-istanbul -i coverage/json/coverage-final.json -o coverage/html-ts -t html",
    "coverage:run": "cross-env NODE_ENV=development karma start karma.coverage.js",
    "dev": "webpack-dev-server --hot --inline",
    "lint": "tslint 'src/**/*.ts'",
    "serve": "http-server dist/ -o",
    "test": "cross-env NODE_ENV=development karma start karma.unit.js",
    "test:debug": "cross-env NODE_ENV=development karma start karma.debug.js",
    "test:watch": "cross-env NODE_ENV=development karma start karma.unit.js --singleRun=false --auto-watch",
    "codecov": "codecov -f coverage/json/coverage-final.json"
  },
  "dependencies": {
    "firebase": "^4.2.0",
    "moment": "^2.18.1",
    "surface": "github:mildrenben/surface",
    "vue": "^2.4.2",
    "vue-class-component": "~5.0.0",
    "vue-on-click-outside": "^1.0.3",
    "vue-property-decorator": "~5.2.1",
    "vue-router": "~2.7.0"
  },
  "devDependencies": {
    "@types/chai-dom": "0.0.5",
    "@types/mocha": "~2.2.40",
    "@types/node": "~8.0.24",
    "@types/sinon": "~2.3.3",
    "autoprefixer": "^7.1.3",
    "avoriaz": "^4.2.0",
    "awesome-typescript-loader": "~3.2.3",
    "chai": "~4.1.1",
    "chai-dom": "^1.5.0",
    "codecov": "^2.2.0",
    "compression-webpack-plugin": "~1.0.0",
    "copy-webpack-plugin": "~4.0.1",
    "cross-env": "~5.0.5",
    "css-loader": "^0.28.7",
    "es6-promise": "~4.1.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "http-server": "~0.10.0",
    "istanbul-instrumenter-loader": "~3.0.0",
    "json-loader": "~0.5.4",
    "karma": "~1.7.0",
    "karma-chai": "~0.1.0",
    "karma-chai-dom": "^1.1.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage": "~1.1.1",
    "karma-junit-reporter": "~1.2.0",
    "karma-mocha": "~1.3.0",
    "karma-mocha-reporter": "~2.2.2",
    "karma-sinon": "~1.0.5",
    "karma-source-map-support": "~1.2.0",
    "karma-sourcemap-loader": "~0.3.7",
    "karma-teamcity-reporter": "~1.0.0",
    "karma-webpack": "~2.0.3",
    "lodash.merge": "~4.6.0",
    "minimist": "~1.2.0",
    "mocha": "~3.5.0",
    "ncp": "~2.0.0",
    "node-sass": "~4.5.0",
    "opn-cli": "~3.1.0",
    "postcss-loader": "^2.0.6",
    "raw-loader": "~0.5.1",
    "remap-istanbul": "~0.9.1",
    "rimraf": "~2.6.1",
    "sass-loader": "^6.0.6",
    "sinon": "~3.2.1",
    "style-loader": "^0.18.2",
    "sw-precache-webpack-dev-plugin": "^0.2.0",
    "sw-precache-webpack-plugin": "^0.11.4",
    "tslint": "~5.6.0",
    "tslint-loader": "~3.5.3",
    "typescript": "~2.4.2",
    "uglify-js": "git+https://github.com/mishoo/UglifyJS2.git#harmony-v2.8.22",
    "uglifyjs-webpack-plugin": "1.0.0-beta.2",
    "url-loader": "^0.5.9",
    "webpack": "~3.5.5",
    "webpack-dev-server": "~2.7.1"
  }
}
